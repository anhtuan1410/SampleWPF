<Window x:Class="SampleContent.dockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleContent"
        mc:Ignorable="d"
        Title="dockPanel" Height="450" Width="800">
    <DockPanel>

        <TextBlock DockPanel.Dock="Left" Background="Goldenrod" TextAlignment="Justify">
             Menu
        </TextBlock>

        <TextBlock DockPanel.Dock="Top" Background="Cyan" TextAlignment="Center">
             Header
        </TextBlock>

        <TextBlock DockPanel.Dock="Bottom" Background="LightCyan" TextAlignment="Center">
             Footer
        </TextBlock>

        <TextBlock Background="PapayaWhip" TextAlignment="Center">
             Content
        </TextBlock>

        
        
        


    </DockPanel>
</Window>
